# GraphQL schema
type Query {
  getAllUsers: GetAllUsersResponse!
}

type Mutation {
  createUser(firstName: String!, lastName: String!): CreateUserResponse!
  updateUser(
    userId: String!
    username: String
    firstName: String
    lastName: String
  ): GenericResponse!
  deleteUser(userId: String!): GenericResponse!
}

type GenericResponse {
  error: Boolean!
  message: String!
  statusCode: Int!
  errorCodeForClient: String!
  data: String!
}

type User {
  userId: String!
  username: String!
  firstName: String!
  lastName: String!
}

type GetAllUsersResponse {
  error: Boolean!
  message: String!
  statusCode: Int!
  errorCodeForClient: String!
  data: [User!]
}

type UserID {
  userId: String!
}

type CreateUserResponse {
  error: Boolean!
  message: String!
  statusCode: Int!
  errorCodeForClient: String!
  data: UserID
}
